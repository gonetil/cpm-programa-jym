{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Detalle de archivo{% endblock %}
 
{% block content %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Directorio</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>Hash</th>
            <td>{{ entity.hash }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('archivo') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <form action="{{ path('archivo_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}