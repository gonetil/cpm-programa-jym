{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block content %}

<h1>Listado de Proyectos</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Nroalumnos</th>
            <th>¿primera vez del docente?</th>
            <th>¿primera vez de la escuela?</th>
            <th>¿primera vez de los alumnos?</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('proyecto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titulo }}</td>
            <td>{{ entity.nroAlumnos }}</td>
            <td>{{ entity.esPrimeraVezDocente }}</td>
            <td>{{ entity.esPrimeraVezEscuela }}</td>
            <td>{{ entity.esPrimeraVezAlumnos }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('proyecto_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('proyecto_edit', { 'id': entity.id }) }}">Modificar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('proyecto_new') }}">
            Agregar proyecto
        </a>
    </li>
</ul>
{% endblock %}