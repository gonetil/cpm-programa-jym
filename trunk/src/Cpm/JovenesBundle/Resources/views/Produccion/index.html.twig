{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Tipos de Producciones{% endblock %}

{% block content %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Tipo de presentación</th>
            <th>Duración de presentación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('produccion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.tipoPresentacion }}</td>
            <td>{{ entity.duracionEstimada }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('produccion_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('produccion_edit', { 'id': entity.id }) }}">Modificar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    {% include "CpmJovenesBundle:Default:pagination.html.twig" %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('produccion_new') }}">
            Agregar
        </a>
    </li>
</ul>
{% endblock %}