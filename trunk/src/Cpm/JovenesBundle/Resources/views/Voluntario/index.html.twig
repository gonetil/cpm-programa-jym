{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Listado de Voluntarios{% endblock %}
 
{% block content %}
{{ filter.form_head(form) }}
{{ form_row(form.modelFilter.apellido) }}
{{ form_label(form.modelFilter.email) }} {{ form_widget(form.modelFilter.email) }}
{{ form_widget(form._token) }}
<br/>
<label>&nbsp;</label><input type="submit" value="Filtar">
</form>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th>Email</th>
            <th>Domicilio</th>
            <th>Observaciones</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('voluntario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellido }}</td>
            <td>{{ entity.telefono }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.domicilio }}</td>
            <td>{{ entity.observaciones }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('voluntario_show', { 'id': entity.id }) }}">ver</a>
                    </li>
                    <li>
                        <a href="{{ path('voluntario_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    {% include "CpmJovenesBundle:Default:pagination.html.twig" %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('voluntario_new') }}">
            Agregar voluntario
        </a>
    </li>
</ul>
{% endblock %}