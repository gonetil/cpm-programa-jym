{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Editar voluntario{% endblock %}
 
{% block content %}

<form action="{{ path('voluntario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Guardar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('voluntario') }}">
            Ir al listado
        </a>
    </li>
    <li>
        <form action="{{ path('voluntario_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}