{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% import "CpmJovenesBundle:Perfil:proyecto_box.macro.html.twig" as proyecto_box %}

{% block content %}
<script>
	function cargar_proyecto(id) { 
		$("#detalle_proyecto").hide()
		$.post("{{ path('miproyecto_usuario') }}", 
				{id : id } ,
			    function(detalle) { $("#detalle_proyecto").html(detalle).show(); }
			   );
		return false;	   
	}
	
	$(document).ready(function() { 
		$('#loading-indicator-mini')
		.hide()
	    .ajaxStart(function() {
	        $(this).show();
	    })
	    .ajaxStop(function() {
	        $(this).hide();
	    });
	});
</script>
<h3> Bienvenido/a {{usuario.nombre}} </h3>
 	{% if proyectos|length > 0 %} 		
 		<ul class="record_actions" style="float:right">
	    	<li>
	    		<a href="{{ path('proyecto_wizzard') }}">Cargar otra propuesta</a>
	    	</li>
		</ul>
 	
		<h4> Usted posee {{ proyectos|length }} 
			{% if proyectos|length > 1 %}
				propuestas registradas 
			{% else %}
				propuesta registrada
			{% endif %}	
		</h4>
		
		<div id="loading-indicator-mini" class="cargando_detalle_proyecto"> &nbsp; </div> 
		<div id="detalle_proyecto"></div>		
		
		<ul class="mis_proyectos">
		    {% for proyecto in proyectos %}
		            <li>		             
		            	{{ proyecto_box.showSmall(proyecto) }}
		            </li>
		    {% endfor %}
		</ul>

	{% else %}
			<h4> Aun no ha cargado ninguna propuesta </h4>
			<ul class="record_actions" style="float:right">
	    	<li>
	    		<a href="{{ path('proyecto_wizzard') }}">Cargar propuesta</a>
	    	</li>
		</ul>
	{% endif %}	
		        
{% endblock %}