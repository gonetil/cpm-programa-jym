{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Edicion de Usuario{% endblock %}
 
{% block content %}

<form action="{{ path('usuario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_row(form.nombre) }}
    {{ form_row(form.apellido) }}
    {% include "CpmJovenesBundle:Default:localidad_distrito_form.html.twig" %}

    {{ form_widget(form) }}
    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('usuario') }}">
            Volver al listado
        </a>
    </li>

    <li>
        <form action="{{ path('usuario_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirm('Esta seguro que desea eliminar el usuario? También se eliminarán todos los correos enviados al usuario')">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
   
</ul>
{% endblock %}