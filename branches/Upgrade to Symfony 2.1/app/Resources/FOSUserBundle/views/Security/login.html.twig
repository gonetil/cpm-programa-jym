{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Iniciar sesión{% endblock %}

{% block fos_user_content %}
{% if error %}
    <div class="error-message">{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	<table border="0" cellpadding="0" cellspacing="0">
	
	<tr>
	<th><label for="username">Dirección de e-mail</label></th>
	<td><input type="text" id="username" name="_username" value="{{ last_username }}" required="true" /></td>
	</tr>
		
	<tr>
		<th><label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label></th>
		<td><input type="password" id="password" name="_password" onfocus="this.value=''" required="true" /></td>
	</tr>

	<tr>
		<th>&nbsp;</th>
		<td>
			<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			<label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
		</td>
	</tr>

	<tr>
		<th></th>
		<td><input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" /></td>
	</tr>
</table>
</form>

{% endblock fos_user_content %}
