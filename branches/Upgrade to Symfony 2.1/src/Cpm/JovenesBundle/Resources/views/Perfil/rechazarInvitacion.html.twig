{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Rechazar Invitación?{% endblock %}

{% block content %}

<p class="warning-message">
	¿Está seguro que desea rechazar la invitación para el evento <b>{{invitacion.instanciaEvento.titulo}}</b>? 
</p>

<ul class="record_actions">
    <li>
        <a href="{{ path('abrir_invitacion_submit', { 'id': invitacion.id, accion: 'rechazar' }) }}">
            Si, Rechazar Invitacion
        </a>
    </li>
    <li>
        <a href="{{ path('home') }}">
            No, Volver al proyecto
        </a>
    </li>
</ul>

{% endblock %}