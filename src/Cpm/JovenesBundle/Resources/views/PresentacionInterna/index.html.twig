{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Presentaciones internas{% endblock %}

{% block content %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Escuela</th>
            <th>Participantes</th>
            <th>Bloque</th>
            <th>Tanda</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('presentacioninterna_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titulo }}</td>
            <td>{{ entity.escuela }}</td>
            <td>{{ entity.getPersonasConfirmadas}}</td>
            <td>{% if entity.bloque %} {{ entity.bloque }} {% else %} SIN DEFINIR {%  endif %}</td>
            <td>{{ entity.tanda }}</td>            
            <td>
                <ul>
                    <li>
                        <a href="{{ path('presentacioninterna_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('presentacioninterna_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('presentacioninterna_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}