{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Invitaciones{% endblock %}

{% block content %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha de Creación</th>
            <th>Invitación aceptada</th>
            <th>Número de asistentes</th>
            <th>Solicita viaje?</th>
            <th>Solicita hospedaje?</th>
            <th>Observaciones</th>
            <th>Suplente</th>
            <th>Asistió</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('invitaciones_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.fechaCreacion %}{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.aceptoInvitacion }}</td>
            <td>{{ entity.numeroAsistentes }}</td>
            <td>{{ entity.solicitaViaje }}</td>
            <td>{{ entity.solicitaHospedaje }}</td>
            <td>{{ entity.observaciones }}</td>
            <td>{{ entity.suplente }}</td>
            <td>{{ entity.asistio }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('invitaciones_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('invitaciones_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    {% include "CpmJovenesBundle:Default:pagination.html.twig" %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('invitaciones_new') }}">
            Agregar invitación
        </a>
    </li>
</ul>
{% endblock %}