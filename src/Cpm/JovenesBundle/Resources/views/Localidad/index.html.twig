{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block content %}

<h1>Listado de Localidades</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Localidad</th>
            <th>Distrito</th>
            <th>Region Educativa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('distrito_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.distrito.nombre }}</td>
            <td>{{ entity.distrito.region.nombre }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('localidad_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('localidad_edit', { 'id': entity.id }) }}">Modificar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('localidad_new') }}">
            Agregar
        </a>
    </li>
</ul>

    
{% endblock %}
