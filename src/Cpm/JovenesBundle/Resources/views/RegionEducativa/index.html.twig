{% extends '::base.html.twig' %}

{% block content %}

<h1>Listado de Regiones Educativas</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Region</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('region_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('region_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('region_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('region_new') }}">
            Agregar
        </a>
    </li>
</ul>

    
{% endblock %}
