{% spaceless %}
<html>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<body>

{% for dia in tanda.dias %}
	<h1>D√çA {{ dia.numero }}</h1>
	{% for bloque in dia.getSortedBloques() %}
				<h3>{{ bloque.horaInicio | date('H:i')}} hs. {{ bloque.nombre | upper }} ({{ bloque.auditorioDia.auditorio.nombre | upper }})</h3>
				{% if bloque.tienePresentaciones %}
					<br/>
					{% for presentacion in bloque.presentaciones %}
                        {% if includeIDs  %} <p>ID: {{ presentacion.getProyecto().getId() }}</p> {% endif %}
                        <p style="font-weight: bold">
							{{ presentacion.getTitulo() | escape }} ({{ presentacion.tipoPresentacion.tipoPresentacion  | e('html') }})
						</p>
					<p>{{ presentacion.escuela  | raw }} - {{ presentacion.localidad  | escape }} - {{ presentacion.distrito  | raw('html') }}</p>
					{% endfor %} {# presentaciones #}
				{% endif %}
				<br/> <br/>
		{% endfor %} {#bloque #}
		<hr/>		
{% endfor %} {#dia #}
</body>
</html>
{% endspaceless %}
