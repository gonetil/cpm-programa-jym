{% extends 'CpmJovenesBundle:Authentication:login_layout.html.twig' %}

{% block content %}
<script>
	show_login = function (){
		$('#loginbox').toggle();
		$('#forgotbox').toggle();
	}
</script>
<!-- Start: login-holder -->
<div id="login-holder">

	<!-- start logo -->
	<div id="logo-login">
		<a href="#"><img src="images/shared/logo.png" width="156" height="40" alt="" /></a>
	</div>
	<!-- end logo -->
	
	<div class="clear"></div>
	
	<!--  start loginbox ................................................................................. -->
	<div id="loginbox">

	    <div id="forgotbox-text">Bienvenido al Programa Jóvenes y Memoria de CPM.</div>

	    {% if error %}
	        <div class="error">{{ error.message }}</div>
	    {% endif %}

		<!--  start login-inner -->
		<div id="login-inner">
		    <form action="{{ path("_security_check") }}" method="post" id="login">
		    	<table border="0" cellpadding="0" cellspacing="0">
				
		        <tr>
		            <th><label for="username">Username</label></th>
		            <td><input type="text" id="username" name="_username" value="{{ last_username }}"  class="login-inp"/></td>
		        </tr>
		
		        <tr>
		            <th><label for="password">Password</label></th>
		            <td><input type="password" id="password" name="_password" onfocus="this.value=''" class="login-inp" /></td>
		        </tr>
		
		        <tr>
		            <th></th>
		            <td><input type="submit"  class="submit-login" value="Ingresar" /></td>
		        </tr>
		        </table>
		    </form>
    	</div>
		<!--  end login-inner -->
		
		<div class="clear"></div>
		
		<a href="javascript:show_login()" class="forgot-pwd">Recuperar Clave</a>
	 </div>
	 <!--  end loginbox -->
	 
	<!--  start forgotbox ................................................................................... -->
	<div id="forgotbox">
		<div id="forgotbox-text">Si no recuerda su clave, ingrese la dirección de correo electrónico que uso para registrarse en el sitio.</div>
		
		<!--  start forgot-inner -->
		<div id="forgot-inner">
			<form action="{{path('recuperar_clave')}}" method="post" id="recuperar-clave">
			<table border="0" cellpadding="0" cellspacing="0">
			<tr>
				<th>Dirección de correo electrónico:</th>
				<td><input type="text" value="@" class="login-inp" /></td>
			</tr>
			<tr>
				<th> </th>
				<td><input type="button" class="submit-login" /></td>
			</tr>
			</table>
			</form>
		</div>
		<!--  end forgot-inner -->
		<div class="clear"></div>
		<a href="javascript:show_login()" class="back-login">Volver al login</a>
	</div>
	<!--  end forgotbox -->

</div>
<!-- End: login-holder -->
{% endblock %}