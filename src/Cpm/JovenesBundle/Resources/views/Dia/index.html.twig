{% extends 'CpmJovenesBundle:Layout:admin_layout.html.twig' %}

{% block title %}Listado de días{% endblock %}

{% block content %}
{{ filter.form_init(form) }}
{{ filter.form_end(form) }}
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tanda</th>
            <th>Numero</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('dia_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.tanda }}</td>
            <td>{{ entity.numero }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('dia_show', { 'id': entity.id }) }}">ver</a>
                    </li>
                    <li>
                        <a href="{{ path('dia_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('dia_new') }}">
            Agregar nuevo día
        </a>
    </li>
</ul>
{% endblock %}